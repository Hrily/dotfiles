{
  "coc.preferences.extensionUpdateCheck": "daily",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["-remote", "auto"],
      "rootPatterns": [".vim/", ".git/", ".hg/", "go.mod"],
      "filetypes": ["go"]
    }
  },
  "go.disable": {
    "workspaceFolder": true
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "javascript",
    "javascript.jsx",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "css",
    "scss"
  ]
}
