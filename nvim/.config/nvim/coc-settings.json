{
  "coc.preferences.extensionUpdateCheck": "daily",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": ["-remote", "auto"],
      "rootPatterns": [".vim/", ".git/", ".hg/", "go.mod"],
      "filetypes": ["go"]
    },
    "zk": {
      "command": "zk",
      "args": ["lsp"],
      "rootPatterns": [".zk/"],
      "filetypes": ["markdown"]
    }
  },
  "go.disable": {
    "workspaceFolder": true
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "json",
    "javascript",
    "javascript.jsx",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "css",
    "scss"
  ],
  "typescript.autoClosingTags": false,
  "suggest.noselect": true
}
