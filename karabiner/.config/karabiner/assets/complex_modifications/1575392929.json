{
  "title": "Change shift key",
  "rules": [
    {
      "description": "Change left_shift to caps_lock if alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            },
            {
              "set_variable": {
                "name": "vimium",
                "value": 1
              }
						}
          ]
        }
      ]
    }
  ]
}
